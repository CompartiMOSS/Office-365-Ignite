@model WordSearchReferencesMVC.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <h2>Keyword to search</h2>
        <p>
            Complete the form to search files from sharepoint site collections.
        </p>
@using (Html.BeginForm("SearchForm", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Keyword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Keyword, new { @class = "form-control" })
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Search" />
            </div>
        </div>
}
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="table-responsive">
            <table id="referencesTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>File</th>
                        <th>Created by</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.Results)
                    {
                        <tr style="cursor:pointer">
                            <td>
                                <a href="@result.Url">@result.Title</a>
                            </td>
                            <td>
                                @result.CreatedBy
                            </td>
                            <td>
                                @result.Created
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>